<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 默认状态 -->
    <item android:state_pressed="false">
        <shape>
            <!-- 渐变 -->
            <solid android:color="#55F5F5F5"/>
            <!-- 描边 -->
            <stroke
                android:width="1dp"
                android:color="#88FFFFFF" />
            <!-- 圆角 -->
            <corners
                android:radius="5dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <!-- 按下时的状态 -->
    <item android:state_pressed="true">
        <shape>
            <!-- 渐变 -->
            <solid
                android:color="#66F5F5F5" />
            <!-- 描边 -->
            <stroke
                android:width="2dp"
                android:color="#FF0000" />
            <!-- 圆角 -->
            <corners
                android:radius="5dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp"/>
        </shape>
    </item>
</selector>